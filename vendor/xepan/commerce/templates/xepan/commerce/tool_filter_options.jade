T.xepan-tool-options(id='{$_name}' style="display:none" for-xepan-component='xepan/commerce/Tool_Filter')
	.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
	.xepan-cms-group-panel.clearfix
		//- h3.collapsed(data-toggle="collapse" data-target="#collapse-item-filter" aria-expanded="false")
		//- 	span| Filter Tool Options
		#collapse-item-filter.xepan-cms-tools-bar-panel.row-fluid.collapse.in
			.panel-body(style="padding-top:0px;padding-bottom:0px;")
				.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#show-hide-item-filter-option" aria-expanded="false")
						span Hide/ Show
						i.fa.fa-chevron-down.pull-right
				#show-hide-item-filter-option.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover.xepan-cms-tool-table
						tr.xepan-tool-option
							td.xepan-tool-option-title Show Price Filter
							td.xepan-tool-option-value 
								select#show_price_filter(data-attr='show_price_filter')
									option(value="true") True																					
									option(value="false") False
						tr.xepan-tool-option
							td.xepan-tool-option-title Min Price
							td.xepan-tool-option-value 
								select#min_price(data-attr='min_price')
									option(value="true") True
									option(value="false") False
						tr.xepan-tool-option
							td.xepan-tool-option-title Max Price
							td.xepan-tool-option-value 
								select#max_price(data-attr='max_price')
									option(value="true") True	
									option(value="false") False
				.xepan-cms-groups-panel1.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel1.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#layouts-item-filter" aria-expanded="false")
						span Layouts
						i.fa.fa-chevron-down.pull-right
				#layouts-item-filter.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover.xepan-cms-tool-table					
						tr.xepan-tool-option
							td.xepan-tool-option-title Custom Template Page
							td.xepan-tool-option-value 
								input#custom_template(data-attr='custom_template')
				.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#item-filter-option-lables" aria-expanded="false")
						span Filter Tool Labels
						i.fa.fa-chevron-down.pull-right
				#item-filter-option-lables.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover.xepan-cms-tool-table
						tr.xepan-tool-option
							td.xepan-tool-option-title Left Label
							td.xepan-tool-option-value 
								input#left_label(data-attr='left_label')
						tr.xepan-tool-option
							td.xepan-tool-option-title Right Label
							td.xepan-tool-option-value 
								input#right_label(data-attr='right_label')
	
																																																													
	script.
		$('\#{$_name} [data-attr]').on('change',function(){
			$(current_selected_component).attr($(this).data('attr'),$(this).val());
		});

		$('\#{$_name}').on('show',function(event){
			$('\#{$_name} [data-attr]').each(function(index,value){
				$(this).val($(current_selected_component).attr($(this).data('attr')));				
			});
		})