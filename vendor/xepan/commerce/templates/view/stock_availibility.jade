.xepan-grid.main-box.clearfix(id="{$_name}" class="{$class}" style="margin-top:20px;")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        h1 Stock Avalibility
        div.filter-block(style="display:none;")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                div(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix
        .row
            {header}{cols}{col}{/}{/}{/}
            {rows}{row}
            div(class="{$odd_even} col-md-{col-width}12{/}" data-id="{$id}")
                {cols}
                .row
                    .col-md-5
                      h2 Order Item : {$item_name}
                      small
                        {stock_effected_cf}
                        {rows}{row}
                        {$custom_field_name} :: {$custom_field_value_name}
                        br
                        {/}{/}
                        {/stock_effected_cf}
                    .col-md-3
                        h4 Order Qty:&nbsp; {$quantity} {$qty_unit}
                    .col-md-4
                      div.row.panel.panel-success
                        div.col-md-6 Premade Quantity
                        div.col-md-6(style="text-align:right;font-weight:bold;") {$avail_quantity} {$available_unit}
                      div.row.panel.panel-danger
                        div.col-md-6 Required Production
                        div.col-md-6(style="text-align:right;font-weight:bold;") {$required_quantity} {$required_unit}
                hr      
                .row
                    .col-md-12
                      {consumption_item}
                      div.row(style="font-weight:bold;font-size:16px;margin-bottom:10px;border-bottom:1px solid #f3f3f3;padding-bottom:10px;")
                        .col-md-6
                          |Consumption Item
                        .col-md-2
                          |Required
                        .col-md-2
                          |Available
                        .col-md-2
                          |To Purchase
                      {rows}{row}
                      div.row
                        .col-md-6
                          h2 {$name}
                          small {$cf_key}
                        .col-md-2 {$required} &nbsp;{$unit}
                        .col-md-2 {$available}&nbsp;{$unit}
                        .col-md-2 {$to_purchase}&nbsp;{$unit}
                      {/row}{/rows}
                      {/consumption_item}
                
            {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}{cols}{col}{$content}{/}{/}{/}
        {$Paginator}
