.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th
                    span Month-Year
                th
                    span Invoice Count
                th
                    span Tax Payable
                th
                    span Tax Paid
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}" style= "cursor:pointer; cursor: hand; max-width:600px;")
                    {cols}
                    td
                      a.xepan-monthlytaxes-widget(data-id="{$monthyear}") {$monthyear}
                    td
                      a.xepan-sales-invoice(href='#',data-id="{$monthyear}") {$count}
                    td
                      a.monthly-widget-amount-cr-detail(href='#',data-id="{$monthyear}") {$total_amount_cr}
                    td
                      a.monthly-widget-amount-dr-detail(href='#',data-id="{$monthyear}") {$total_amount_dr}
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
