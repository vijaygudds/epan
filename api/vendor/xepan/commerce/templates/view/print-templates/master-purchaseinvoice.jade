table(style='width: 100%;')
    tbody
        tr(style='height: 110px;')
          td(style='height: 110px;')
            h1 Purchase INVOICE
          td(style='height: 110px;')
            h2(style='text-align: center; font-size: 13px;') &nbsp;
            h2(style='text-align: center; font-size: 13px;')
              strong
                | Your company name
                br
            div(style='text-align: center; font-size: 7px;')
              | Your company address
              br
              |  Email: yourcompanyemail
              br
              | Call: phone number
        tr(style='height: 13px;')
          td(style='height: 13px;', colspan='2')
            hr
        tr(style='height: 111px;')
          td(style='height: 111px;')
            table
              thead
                tr
                  td(style='vertical-align: top;')
                    p Purchase Invoice No.:{$document_no}
                  td(style='text-align: right; vertical-align: top;')
                    p(style='text-align: left;') Date :{$created_at}
                tr
                  td(style='font-size: 8px; vertical-align: top;')
                    p
                      strong Our Bankers:
                      br
                      | your bankers information
                  td(style='font-size: 8px; text-align: right; vertical-align: top;')
                    p(style='text-align: left;')
                      strong A/c No
                      | :-
                      br
                      | your account no.
          td(style='height: 111px;')
            div
              | To, 
              br
              |  {$contact}{contact_id}{/}
            div(style='font-size: 8px;')
              strong  Billing Address:
              br
              |  {$billing_address}, {$billing_city} 
              br
              |  {$billing_state}, {$billing_pincode}, {$billing_country}
              br
              |  {$billing_contact} {$billing_email}
              br
              |  Emails: {$emails}
              br
              |  Contacts: {$contacts}
        tr(style='height: 1px;')
          td(style='height: 1px;', colspan='2')
            hr
            div &nbsp;
        tr
          td(colspan='2') {$item_info}
        tr(style='height: 13px;')
          td(style='height: 13px;')
            | Narration:
            div(style='font-size: 8px;') {$narration}
          td(style='height: 13px;')
            table(style='width: 100%;')
              tbody
                tr(style='height: 13px;')
                  td(style='height: 13px; width: 47.0471%;') Gross Amount:
                  td(style='height: 13px; width: 45.9529%;')
                    span(style='font-size: 8px;') {$currency} {$currency_id} {$gross_amount}
                tr(style='height: 13px; font-size: 10px;')
                  td(style='height: 13px; width: 47.0471%;') Discount:
                  td(style='height: 13px; width: 45.9529%;')
                    span(style='font-size: 8px;') {$currency} {$currency_id} {$discount_amount}
                tr(style='height: 13px;')
                  td(style='height: 13px; width: 47.0471%;') Grand Total:
                  td(style='height: 13px; width: 45.9529%;')
                    span(style='font-size: 8px;') {$currency} {$currency_id} {$net_amount}
        tr(style='height: 13px;')
          td(style='height: 13px;', colspan='2')
            div(style='font-size: 7px;')
              | {$amountinwords}
              hr
        tr(style='height: 13px;')
          td(style='height: 13px;')
            div(style='font-size: 10px;') Vat sum: {common_vat}
            div(style='font-size: 7px;') {$id} = {$name}
            | {/}
            div(style='font-size: 7px;') {$currency} {$currency_id} @ {$exchange_rate}
            div(style='font-size: 7px;') &nbsp;
            div(style='font-size: 7px;')
              h4
                span(style='font-size: 10px;') For [your company name]
              p &nbsp;
              table(style='height: 30px; width: 100%;')
                tbody
                  tr
                    td(style='text-align: left; font-size: 7px;') Authorized Signatory
                    td(style='text-align: right; font-size: 7px;') Customer&apos;s Signature
              p &nbsp;
              p
                span(style='font-size: 8px;') &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Computer generated rate quotation/Proforma Invoice
          td(style='height: 13px;')
            | Terms and conditions
            div(style='font-size: 6px;') {$tnc_id} {$tnc_text} {terms_and_conditions} {header} {cols}{col}
