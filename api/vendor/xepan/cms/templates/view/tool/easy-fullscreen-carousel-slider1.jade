script.
	$(function() {
		var header = $(".s-header");
		$(window).scroll(function() {    
			var scroll = $(window).scrollTop();
				if (scroll <= 100) {
					header.removeClass('s-header__shrink');
				} else {
					header.addClass('s-header__shrink');
				}
			});
		});