.xepan-grid.main-box.clearfix(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.xepan-grid-search
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix
            {header}{cols}{col}{/}{/}{/}
            .row
                {rows}{row}
                div(class="col-md-{col-width}2{/}" data-id="{$id}")
                    {cols}
                    .row.panel.panel-default
                        .col-md-5
                            {$Field_name1}sd
                        .col-md-5
                            {$Field_name2}dsfsd
                        .col-md-2
                            {$edit}
                            {$delete}
                    
                {/}
                {/}{/}
                {not_found}
                tr
                    td.atk-padding-large.atk-align-center
                        span.atk-label.atk-effect-warning
                            span.icon-attention &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
