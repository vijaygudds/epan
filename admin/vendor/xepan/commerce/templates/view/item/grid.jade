.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table-responsive
        table.table.user-list.table-hover.footable.toggle-circle-filled(style="width:100%")
            {header}
            thead.xepan-hover-hand
                {cols}{col}
                th
                th
                  span Image
                th(id="{$name_sortid}")
                  span  Name 
                  span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$name_sort}
                th(id="{$sale_price_sortid}")
                  span Price 
                  span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$sale_price_sort}
                th(id="{$total_orders_sortid}" data-hide="phone")
                  span Total Sale 
                  span(style= "cursor:pointer; cursor: hand; max-width:600px;"){$total_orders_sort}
                th 
                th    
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}      
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td
                        | {$selected}
                    td
                        img(alt='', src='{$first_image}' onerror="this.src='../vendor/xepan/commerce/templates/view/item/20.jpg'")
                    td
                        a(href='{url}?page=xepan_commerce_itemdetail&document_id={$id}{/}')
                            h2.do-view-item-detail(href='#',data-id="{$id}" data-item-id="{$item_id}") {name}Item Name{/}
                        span.pull-center(title='code') Code: {sku} Ipd001 {/}
                    td
                        | {sale_price} $ 625.50 {/}
                        br
                        i(style='text-decoration:line-through;'){original_price}{/}
                    td
                        i.fa.fa-shopping-cart
                            b {total_orders} 1500 {/}
                        |  Orders
                        span
                        .sparkline(sparkType="bar") {weakly_sales}40,10,30,30,10,5,20,25,32,14{/}
                    td
                        | {action} {/}
                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                    
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        .xepan-move-center{$Paginator}