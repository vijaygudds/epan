.xepan-grid.main-box.clearfix(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                div(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")

        .row
          .col-md-3
            .panel.panel-default
              .panel-body
                h4.small Empty                   
                .btn.btn-primary.pull-right.btn-empty.btn-sm(data-id="new-item")
                  span.small  Create Item
          .col-md-3 
            .panel.panel-default
              .panel-body
                h4.small Template                   
                .btn.btn-primary.pull-right.btn-template.btn-sm(data-id="new-template")
                  span.small  Create Item
        hr          
    {/Pannel}

    .main-box-body.clearfix
        .row
            {header}{cols}{col}{/}{/}{/}
            {rows}{row}
            div(class="{$odd_even} col-md-{col-width}3{/}" data-id="{$id}")
                {cols}
                .panel.panel-default
                  .panel-body
                    h4.small(style="width: 100%;white-space:nowrap;overflow: hidden;text-overflow: ellipsis;") {$name}                  
                    .btn.btn-primary.pull-right.duplicate-btn.btn-sm(data-id="{$id}")
                      span.small  Duplicate

                
            {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}{cols}{col}{$content}{/}{/}{/}
        {$Paginator}
